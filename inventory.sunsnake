    render():
        print('renderi nvetort')
        self.panel.text = ''
        for key, value in self.items:
            if value:
                self.panel.text += key
            self.panel.text += '\n'



    add_item(item):
        self.items.append


    clear():
        self.items = []

    input(key):
        if key == 'i':
            self.panel.enabled = not self.panel.enabled
            if self.panel.enabled:
                self.render()



